<nav>
    <h2>Categorias</h2>
    <p><a href="/">Voltar</a></p>
    <p><a href="/categories/create">Cadastar</a></p>
</nav>
<ul class="list">
    {{#if emptyCategories}}
        <p>Não há categorias cadastradas</p>
    {{/if}}
    {{#each categories}}
        <li>
            {{this.name}}
        </li>
        <span class="actions">
            <a href="/categories/edit/{{this.id}}"><i class="bi bi-pencil-square"></i></a> 
            <form action="/categories/remove" method="post">
                <input type="hidden" name="id" value="{{this.id}}">
                <button type="submit">
                    <i class="bi bi-x-lg"></i>
                </button>
            </form>
        </span>
    {{/each}}
</ul>