<nav id="navbar">
    <h2>Cadastro de Usuário</h2>
    <p><a href="/users">Voltar</a></p>
</nav>

<form action="/users/create" method="POST" class="form">
    <div class="form-control">
        <label for="name">Nome completo:</label>
        <input type="text" name="name" placeholder="Digite o seu nome completo">
    </div>
    <div class="form-control">
        <label for="mail">E-mail:</label>
        <input type="text" name="mail" placeholder="Digite o seu e-mail">
    </div>
    <div class="form-control">
        <label for="cpf">CPF:</label>
        <input type="text" name="cpf" placeholder="Digite o seu CPF">
    </div>
    <div class="form-control">
        <label for="cell_phone">Celular:</label>
        <input type="text" name="cell_phone" placeholder="Digite o seu celular">
    </div>
    <div class="form-control">
        <label for="birth_date">Data de nascimento:</label>
        <input type="date" name="birth_date" placeholder="Digite o sua data de nascimento">
    </div>
    <div class="form-control">
        <label for="age">Idade:</label>
        <input type="text" name="age" placeholder="Digite a sua idade">
    </div>
    <div class="form-control">
        <label for="gender">Gênero:</label>
        <input type="text" name="gender" placeholder="Digite seu genero">
    </div>
    <div class="form-control">
        <label for="postal_code">CEP:</label>
        <input type="text" name="postal_code" placeholder="Digite o seu CEP">
    </div>
    <div class="form-control">
        <label for="street_name">Endereço:</label>
        <input type="text" name="street_name" placeholder="Digite o seu endereço">
    </div>
    <div class="form-control">
        <label for="house_number">Número:</label>
        <input type="text" name="house_number" placeholder="Digite o núemro da sua casa">
    </div>
    <div class="form-control">
        <label for="complement">Complemento:</label>
        <input type="text" name="complement" placeholder="Digite o seu complemento">
    </div>
    <div class="form-control">
        <label for="neighborhood">Bairro:</label>
        <input type="text" name="neighborhood" placeholder="Digite o seu bairro">
    </div>
    <div class="form-control">
        <label for="city">Cidade:</label>
        <input type="text" name="city" placeholder="Digite a sua cidade">
    </div>
    <div class="form-control">
        <label for="state">Estado:</label>
        <input type="text" name="state" placeholder="Digite o seu estado">
    </div>
    <input type="submit" value="Cadastrar">
</form>